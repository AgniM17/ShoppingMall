@model Product
@{
    ViewData["Title"] = "Edit Products Page";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
    </div>

    <br />

    <div>
        <label asp-for="Price"></label><br />
        <input asp-for="Price" />
    </div>

    <br />

    <button type="submit">Update</button>
</form>

